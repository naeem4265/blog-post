{
  "name": "blog-backend",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "test": "NODE_OPTIONS=--experimental-vm-modules npx jest --coverage",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules npx jest --watch",
    "test:ci": "NODE_OPTIONS=--experimental-vm-modules npx jest --ci --coverage"
  },
  "dependencies": {
    "express": "^4.19.2",
    "pg": "^8.12.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.5",
    "@babel/preset-env": "^7.23.5",
    "jest": "^29.7.0",
    "supertest": "^7.1.4"
  },
  "jest": {
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "branches": 85,
        "functions": 85,
        "lines": 85,
        "statements": 85
      }
    },
    "testEnvironment": "node",
    "transform": {}
  }
}
